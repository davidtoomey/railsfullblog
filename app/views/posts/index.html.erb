
  <%=stylesheet_link_tag 'headernav.css'%>
  <%=stylesheet_link_tag 'posts.css'%>
 
 <link href='http://fonts.googleapis.com/css?family=Arvo' rel='stylesheet' type='text/css'>


<p id="notice"><%= notice %></p>

<div class="headernav">
  
  

  <%= link_to 'Account Details', {:controller => 'users', :action => 'edit', :id => session[:user_id] || '#id'}%>
  <%= link_to 'Profile', {:controller => 'users', :action => 'show', :id => session[:user_id] || '#id'}%>
  <%= link_to 'Logout', {:controller => 'sessions', :action => 'destroy'} %>
</div>

<div class="postcontainer">
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.reverse.each do |post| %>
      <tr>
        <td><div><%= post.user.username unless post.user.nil? %><span><br><%= post.created_at %></span></div></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'New Post', new_post_path %>
</div>
